    HauntedHouse.Game.World.Locations.Hall
    HauntedHouse.Game.World.Objects
    HauntedHouse.Recognizer
    HauntedHouse.Tokenizer
    
  other-modules:
    HauntedHouse.Game.Engine.OnlyVerb
